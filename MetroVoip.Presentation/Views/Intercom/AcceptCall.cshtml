@{
    ViewBag.Title = "Accept Incoming Call";
}

<h2>Accept Incoming Call</h2>

<form asp-action="AcceptCall" method="post">
    <div class="form-group">
        <label for="ipAddress">IP Address</label>
        <input type="text" class="form-control" id="ipAddress" name="ipAddress" placeholder="192.168.123.234" required />
    </div>
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control" id="username" name="username" placeholder="Hudson" required />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Saul" required />
    </div>
    <button type="submit" class="btn btn-primary">Accept Call</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">
        @ViewBag.Message
    </div>
}
